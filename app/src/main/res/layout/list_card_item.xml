<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp30"
    android:background="@color/white_three"
    app:cardCornerRadius="@dimen/dp5">

    <ImageView
        android:id="@+id/iv_item_1"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="@dimen/dp21"
        android:layout_marginTop="@dimen/dp17"
        android:layout_marginBottom="@dimen/dp16"
        android:src="@drawable/ic_mastercard_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="text"
        android:textColor="@color/color6"
        android:textSize="@dimen/sp16"
        app:layout_constraintBottom_toTopOf="@id/tv_item_2"
        app:layout_constraintStart_toEndOf="@+id/iv_item_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp12"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/number"
        android:textColor="@color/warm_grey"
        android:textSize="@dimen/sp14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_item_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_1"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btn_show_menu"
        android:layout_width="@dimen/dp40"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/dp12"
        android:background="@color/white_three"
        android:src="@drawable/ic_more_vert_black_18_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btn_create"
        android:layout_width="@dimen/dp40"
        android:layout_height="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/daskish_blur"
        android:src="@drawable/ic_create_black_18_dp_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_delete"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_item_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="@dimen/dp40"
        android:layout_height="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/blue"
        android:src="@drawable/ic_delete_outline_black_18_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_show_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_goneMarginEnd="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>